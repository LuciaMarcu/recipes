<% provide(:title, 'Add recipes') %>

<h1>Add a new recipe</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: @recipe, local: true) do |f| %>    

            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>

            <%= f.label :content %>
            <%= f.text_area :content, class: 'form-control' %>

            <%= f.label :details %>
            <%= f.text_area :details, class: 'form-control', size: "10x5" %>

            <%= f.label :category_id %>            
            <%= f.select :category_id, [["Breakfast", 1], ["Lunch", 2], ["Dinner", 3], ["Dessert", 4]], 
                          prompt: "Select...", class: 'form-control' %>

            <%= f.label :image %>
            <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png", class: "form-control" %>            

            <%= f.submit "Add recipe", class: "btn btn-warning" %>
        <% end %>
    </div>
</div>